# =============================================================================
# Railway Satellite Pipeline Service
# =============================================================================
# These environment variables should be set in Railway dashboard
# Project → Service → Variables

# =============================================================================
# Convex Connection (Required)
# =============================================================================
CONVEX_DEPLOYMENT_URL=https://your-project.convex.cloud
CONVEX_API_KEY=prod:your_deploy_key_here

# =============================================================================
# Copernicus Data Space (Required)
# =============================================================================
# Register at: https://dataspace.copernicus.eu/
COPERNICUS_CLIENT_ID=your_client_id_here
COPERNICUS_CLIENT_SECRET=your_client_secret_here

# =============================================================================
# Cloudflare R2 Storage (Required for paid tier imagery)
# =============================================================================
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=grazing-satellite-tiles

# =============================================================================
# Pipeline Behavior (Optional)
# =============================================================================
# Days since last observation before re-processing a farm
OBSERVATION_THRESHOLD_DAYS=2

# Maximum farms to process per cron run
MAX_FARMS_PER_RUN=50

# Set to "true" to log what would happen without processing
DRY_RUN=false
